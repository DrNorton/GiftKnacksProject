extends layout

block content
  h1= title
  div(class="demo")
    a(class="permalink", href=".") ← главная
    h1 Авторизация
    div(class="auth-form")
      #error
        if(error.length>0)
          div(class="error-msg")= error
      form(action="/api/auth/changepassword" method="post")
        div
         input(type="password" name="oldpass" class="input oldpass" placeholder="oldpass")
        div
         input(type="password" name="newpass" class="input newpass" placeholder="newpass")
        div(class="buttons")
         span Логин и пароль <strong>admin</strong>&nbsp;
         button(type="submit") Войти
