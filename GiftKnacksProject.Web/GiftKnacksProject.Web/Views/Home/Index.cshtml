@{
	ViewBag.Title = "KnacksGifter";
}
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation" ng-controller="RootCtrl" ng-cloak class="ng-cloak">
	<div class="container">
		<div class="navbar-header">
			<button class="btn btn-success navbar-toggle" ng-click="navbarExpanded = !navbarExpanded">
				<span class="glyphicon glyphicon-chevron-down"></span>
			</button>
			<a class="navbar-brand" ng-hide="authentication.isAuth" href="#/landing"><img src="~/img/logo.png"/></a>
			<a class="navbar-brand" ng-show="authentication.isAuth" href="#/dashboard"><img src="~/img/logo.png" /></a>
		</div>
		<div class="collapse navbar-collapse" data-collapse="!navbarExpanded">
			<ul class="nav navbar-nav navbar-right">
				<li ng-show="authentication.isAuth"> <a href="#/wishform">Create new wish</a></li>
				<li ng-show="authentication.isAuth"> <a href="#/giftform">Create new gift</a></li>
				<li ng-show="authentication.isAuth" class="dropdown">
					<a ng-href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Searching<span class="caret"></span></a>
					<ul class="dropdown-menu" role="menu">
						<li><a href="#/findwish">Find wish</a></li>
						<li><a href="#/findgift">Find gift</a></li>
					</ul>
				</li>
				<li ng-show="authentication.isAuth" class="dropdown">
					<a ng-href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">User menu<span class="caret"></span></a>
					<ul class="dropdown-menu" role="menu">
						<li><a href="#/profile">My Profile</a></li>
						<li><a href="#/dashboard">Dashboard</a></li>
						<li><a href="#/history">History</a></li>
						<li class="divider"></li>
						<li><a href="#/" ng-click="logOut()">Logout</a></li>
					</ul>
				</li>
				<li ng-hide="authentication.isAuth"> <a href="#/login">Log In</a></li>
				<li ng-hide="authentication.isAuth"> <a href="#/signup">Sign Up</a></li>
			</ul>
		</div>
	</div>
</div>
<div class="container body-content">
	<div data-ng-view="">
	</div>
</div>
<hr />
<div id="footer">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<p class="text-muted">Created by KnacksGifter team.</p>
			</div>
			<div class="col-md-6">
				<p class="text-muted">Copyright.</p>
			</div>
		</div>
	</div>
</div>