@{
    ViewBag.Title = "KnacksGifter";
}
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation" ng-controller="RootCtrl" ng-cloak class="ng-cloak">
	<div class="container">
		<div class="navbar-header">
			<button class="btn btn-success navbar-toggle" ng-click="navbarExpanded = !navbarExpanded">
				<span class="glyphicon glyphicon-chevron-down"></span>
			</button>
			<a class="navbar-brand" ng-hide="authentication.isAuth" href="#/">Home</a>
			<a class="navbar-brand" ng-show="authentication.isAuth" href="#/dashboard">My Dashboard</a>
		</div>
		<div class="collapse navbar-collapse" data-collapse="!navbarExpanded">
			<ul class="nav navbar-nav navbar-right">
				<li ng-show="authentication.isAuth"><a ng-href="">Welcome {{authentication.userName}}</a></li>
				<li ng-show="authentication.isAuth"><a href="#/profile">My Profile</a></li>
				<li ng-show="authentication.isAuth"><a href="#/" ng-click="logOut()">Logout</a></li>
				<li ng-hide="authentication.isAuth"> <a href="#/login">Log In</a></li>
				<li ng-hide="authentication.isAuth"> <a href="#/signup">Sign Up</a></li>
			</ul>
		</div>
	</div>
</div>
<div class="container body-content">
	<div data-ng-view="">
	</div>
</div>
<hr />
<div id="footer">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<p class="text-muted">Created by KnacksGifter team.</p>
			</div>
			<div class="col-md-6">
				<p class="text-muted">Copyright.</p>
			</div>
		</div>
	</div>
</div>